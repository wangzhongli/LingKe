<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/a10151235_2160_1920"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="12:00"
            android:textSize="48sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="4月15日"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="周三"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="18dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="郑州"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="多云 22,28 °C"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.momo.lingke.view.CircleMenuLayout
        android:id="@+id/id_menulayout"
        android:layout_width="350dip"
        android:layout_height="350dip"
        android:background="@mipmap/circle_bg3"
        android:layout_marginTop="60dip"
        android:padding="100dp">

        <RelativeLayout
            android:id="@id/id_circle_menu_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="104.0dip"
                android:layout_height="104.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/mobile_icon" />

            <ImageView
                android:layout_width="116.0dip"
                android:layout_height="116.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/turnplate_mask_unlogin_normal" />
        </RelativeLayout>
    </com.momo.lingke.view.CircleMenuLayout>

</LinearLayout>